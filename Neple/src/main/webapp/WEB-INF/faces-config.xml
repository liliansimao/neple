<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<!-- Repositório de Mensagens -->
	<application>
		<resource-bundle>
			<base-name>br.com.neple.messages.mensagens</base-name>
			<var>msgs</var>
		</resource-bundle>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>en_US</supported-locale>
		</locale-config>
		<message-bundle>
        	br.com.neple.messages.mensagens
		</message-bundle>
	</application>

	<!-- Limpa a marcação dos campos da tela quando da erro de validação -->
	<lifecycle>
		<phase-listener>org.omnifaces.eventlistener.ResetInputAjaxActionListener</phase-listener>
	</lifecycle>
</faces-config>
